<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.progetto.ingsw.trukscout24.Controller.RegistrazioneController"
            fx:id="rootPane"
            prefHeight="900.0"
            prefWidth="1400.0"
            stylesheets="@../css/Registrazione.css"
            styleClass="root">

    <!-- Immagine di sfondo sfocata -->
    <ImageView fitWidth="1400.0" fitHeight="900.0">
        <image>
            <Image url="@../Icone/SfondoLoginRegistrazione.png" />
        </image>
    </ImageView>

    <!-- StackPane centrale per contenuto -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" alignment="CENTER">
        <VBox alignment="CENTER" spacing="20.0" styleClass="form-container" maxHeight="650">

            <!-- Logo cliccabile -->
            <VBox alignment="CENTER" spacing="5" onMouseClicked="#HomeClick" styleClass="logo-container">
                <ImageView fitHeight="90.0" fitWidth="203.0" preserveRatio="true">
                    <Image url="@../Icone/TruckScout24.png" />
                </ImageView>
            </VBox>

            <!-- Form Registrazione -->
            <VBox spacing="10.0" styleClass="form-fields">

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Nome:" styleClass="label-field" />
                    <TextField fx:id="nomeField" promptText="Nome" styleClass="input-field" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Cognome:" styleClass="label-field" />
                    <TextField fx:id="cognomeField" promptText="Cognome" styleClass="input-field" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“§ Email:" styleClass="label-field" />
                    <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“ž Telefono:" styleClass="label-field" />
                    <TextField fx:id="telefonoField" promptText="Telefono" styleClass="input-field" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ”‘ Password:" styleClass="label-field" />
                    <StackPane>
                        <PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field" />
                        <TextField fx:id="passwordTextField" promptText="Password" styleClass="password-field" visible="false" />
                        <Button fx:id="togglePasswordButton" onAction="#togglePasswordVisibility" styleClass="toggle-button" text="ðŸ‘" StackPane.alignment="CENTER_RIGHT">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </StackPane>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ”‘ Conferma:" styleClass="label-field" />
                    <StackPane>
                        <PasswordField fx:id="confermaPasswordField" promptText="Conferma Password" styleClass="password-field" />
                        <TextField fx:id="confermaPasswordTextField" promptText="Conferma Password" styleClass="password-field" visible="false" />
                        <Button fx:id="toggleConfirmPasswordButton" onAction="#toggleConfirmPasswordVisibility" styleClass="toggle-button" text="ðŸ‘" StackPane.alignment="CENTER_RIGHT">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </StackPane>
                </HBox>
            </VBox>

            <!-- Label per messaggi di errore e successo -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="errorLabel" styleClass="error-label" text="Errore: Campo obbligatorio non compilato" visible="false" />
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="successLabel" styleClass="success-label" text="Operazione completata con successo!" visible="false" />
            </HBox>

            <!-- Loading indicator -->
            <ProgressIndicator fx:id="loadingIndicator" maxHeight="30" maxWidth="30" visible="false" />

            <!-- Pulsante Registrazione -->
            <HBox alignment="CENTER">
                <Button fx:id="registerButton"
                        text="Registrati"
                        onAction="#onRegisterClick"
                        styleClass="register-button" />
            </HBox>

            <!-- Link Accedi -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Hai giÃ  un account?" styleClass="login-text" />
                <Hyperlink fx:id="loginLink"
                           text="Accedi ora"
                           onAction="#handleGoToLogin"
                           styleClass="login-link" />
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
