            <!-- CAMION SIMILI -->
            <VBox styleClass="similar-trucks-section">
                <Label fx:id="similarTrucksLabel" styleClass="section-title" text="ðŸš› Camion Simili che Potrebbero Interessarti" />
                <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="NEVER">
                    <HBox fx:id="similarTrucksContainer" styleClass="similar-trucks-container" />
                </ScrollPane>
            </VBox>
        </VBox>
    </ScrollPane>

    <!-- FOOTER FISSO -->
    <HBox alignment="CENTER" spacing="20.0" styleClass="footer">

        <!-- Sinistra -->
