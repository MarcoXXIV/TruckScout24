                <!-- IMMAGINE A SINISTRA -->
                <VBox styleClass="image-container">
                    <ImageView fx:id="mainImage" preserveRatio="true" styleClass="product-image" />
                </VBox>

                <!-- CONTENUTO A DESTRA -->
                <VBox styleClass="product-info-container">

                    <!-- TITOLO E CUORE SULLA STESSA RIGA -->
                    <HBox styleClass="title-heart-row">
                        <VBox styleClass="title-section" HBox.hgrow="ALWAYS">
                            <Label fx:id="productTitle" styleClass="product-title" />
                        </VBox>
                        <Button fx:id="wishlistButton" onAction="#onWishlistClick" styleClass="wishlist-button-flat" text="â™¥" />
                    </HBox>

                    <!-- PREZZO -->
                    <VBox styleClass="price-section">
                        <Label fx:id="productPrice" styleClass="product-price" />
                    </VBox>

                    <!-- CARATTERISTICHE IN GRIGLIA 3x3 -->
                    <VBox styleClass="specs-section">
                        <Label styleClass="section-title" text="ðŸ”§ Caratteristiche Principali" />
                        <GridPane styleClass="specs-grid-3x3">
                            <columnConstraints>
                                <ColumnConstraints minWidth="150" prefWidth="150" />
                                <ColumnConstraints minWidth="150" prefWidth="150" />
                                <ColumnConstraints minWidth="150" prefWidth="150" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="70" prefHeight="70" />
                                <RowConstraints minHeight="70" prefHeight="70" />
                                <RowConstraints minHeight="70" prefHeight="70" />
                            </rowConstraints>

                            <!-- Prima riga -->
                            <VBox styleClass="spec-item" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label styleClass="spec-label" text="âš¡ Potenza" />
                                <Label fx:id="specPotenza" styleClass="spec-value" />
                            </VBox>
                            <VBox styleClass="spec-item" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label styleClass="spec-label" text="ðŸ›£ï¸ Chilometraggio" />
                                <Label fx:id="specKilometri" styleClass="spec-value" />
                            </VBox>
                            <VBox styleClass="spec-item" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                <Label styleClass="spec-label" text="â›½ Carburante" />
                                <Label fx:id="specCarburante" styleClass="spec-value" />
                            </VBox>

                            <!-- Seconda riga -->
                            <VBox styleClass="spec-item" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label styleClass="spec-label" text="âš™ï¸ Cambio" />
                                <Label fx:id="specCambio" styleClass="spec-value" />
                            </VBox>
                            <VBox styleClass="spec-item" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <Label styleClass="spec-label" text="ðŸŒ¿ Emissioni" />
                                <Label fx:id="specEmissioni" styleClass="spec-value" />
                            </VBox>
                            <VBox styleClass="spec-item" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                <Label styleClass="spec-label" text="ðŸ“… Anno" />
                                <Label fx:id="specAnno" styleClass="spec-value" />
                            </VBox>

                            <!-- Terza riga -->
                            <VBox styleClass="spec-item" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                <Label styleClass="spec-label" text="ðŸš› Modello" />
                                <Label fx:id="specModello" styleClass="spec-value" />
                            </VBox>
                            <VBox styleClass="spec-item" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <Label styleClass="spec-label" text="ðŸ“‹ Stato" />
                                <Label styleClass="spec-value" text="Usato" />
                            </VBox>
                            <VBox styleClass="spec-item" GridPane.columnIndex="2" GridPane.rowIndex="2">
                                <Label styleClass="spec-label" text="ðŸ”„ Trazione" />
                                <Label styleClass="spec-value" text="4x2" />
                            </VBox>
                        </GridPane>
                    </VBox>
                </VBox>
            </HBox>

            <!-- SEPARATOR -->
            <Separator styleClass="section-separator" />

            <!-- DESCRIZIONE E PRENOTAZIONE AFFIANCATE -->
            <HBox styleClass="description-booking-container">

                <!-- DESCRIZIONE CON SCROLLPANE (sinistra) -->
                <VBox styleClass="description-section">
                    <Label styleClass="section-title" text="ðŸ“ Descrizione Dettagliata" />
                    <ScrollPane styleClass="description-scroll-pane">
                        <Label fx:id="productDescription" styleClass="description-text" wrapText="true" />
                    </ScrollPane>
                </VBox>

                <!-- PRENOTAZIONE (destra) -->
                <VBox styleClass="booking-section">
                    <Label styleClass="section-title" text="ðŸš— Prenota Test Drive" />
                    <Label styleClass="booking-subtitle" text="Seleziona una data per il test drive" />
